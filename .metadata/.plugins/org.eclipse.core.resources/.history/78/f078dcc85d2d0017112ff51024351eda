#include "Deck.h"

Deck::Deck() {

	for(int i = 0; i < NUMBER_OF_CARDS; i++) {
		deck.push_back(new Card(rankList[i % 13], suitList[i / 13]));
	}
}


void Deck::fisherYatesShuffle() {

}

void Deck::printDeck() {

	for(int i = 0; i < NUMBER_OF_CARDS; i++) {
		cout << deck[i].printCard() << " ";
	}
}


