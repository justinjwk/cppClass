#include "Hand.h"

Hand::Hand() {

}

Hand::Hand(Deck d, PLAYER_TYPE p) {

	Card temp[5];

	for(int i = 0; i < 5; i++) {
		temp[i] = d.dealCard();
	}

	sortCards(temp);

	for(int i = 0; i < 5; i++) {
		hand.push_back(temp[i]);
	}

	gamePlayer = p;
	hand_value = unchecked;
}

Hand::~Hand() {

}

void Hand::sortCards(Card cardHand[5]) {

	Card temp;

	for(int i = 0; i < 4; i++) {
		for(int j = 0; j < 4 - i; j++) {
			if(cardHand[j].getRankValue() > cardHand[j+1].getRankValue()) {
				temp = cardHand[j];
				cardHand[j] = cardHand[j+1];
				cardHand[j+1] = temp;
			}
		}
	}
}

vector<int> Hand::getHighest() {
	return high_list;
}

int Hand::getHighPair() {
	return high_pair;
}

