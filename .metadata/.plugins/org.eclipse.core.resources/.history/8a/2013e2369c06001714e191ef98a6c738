#include <iostream>
using namespace std;

Event::Event(double probability)
{
	setProbability(probability);
}

void Event::setProbability(double prob)
{
	if(prob >=0 && prob <=1)
	{
		probability = prob;
	}
	else
	{
		throw invalid_argument("Event ranges should be from 0.0(never) to 1.0(certain)");
	}
}
