#include <iostream>
#include <string>
using namespace std;

int main()
{
	string s1("happy");
	string s2(" birthday");
	string s3;

	cout << "s1 is \"" << s1 << "\"; s2 is \"" << s2
			<< "\"; s3 is \"" << s3 << '\"'
			<< "\n\nThe results of comparing s2 and s1:"
			<< "\ns2 == s1 yields " << (s2 == s1 ? "true" : "false")
			<< "\ns2 != s1 yields " << (s2 != s1 ? "true" : "false")
			<< "\ns2 >  s1 yields " << (s2 > s1 ? "true" : "false")
			<< "\ns2 <  s1 yields " << (s2 < s1 ? "true" : "false")
			<< "\ns2 >= s1 yields " << (s2 >= s1 ? "true" : "false")
			<< "\ns2 <= s1 yields " << (s2 <= s1 ? "true" : "false");

	cout << "\n\nTesting s3.empty():" << endl;

	if (s3.empty())
	{
		cout << "s3 is empty; assigning s1 to s3;" << endl;
		s3 = s1;
		cout << "s3 is \"" << s3 << "\"";
	}

	cout << "\n\ns1 += s2 yields s1 = ";
	s1 += s2;
	cout << s1;

}
