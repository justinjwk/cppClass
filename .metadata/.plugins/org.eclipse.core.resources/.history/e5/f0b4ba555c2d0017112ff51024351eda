#include "Deck.h"





//	srand (time(NULL));



Deck::Deck() {
	deck = new Card[NUMBER_OF_CARDS];

	for(int i = 0; i < NUMBER_OF_CARDS; i++) {
		deck[i] = Card(rankList[i % 13], suitList[i / 13]);
	}
}

void Deck::fisherYatesShuffle() {

}

void Deck::printDeck() {

	for(int i = 0; i < NUMBER_OF_CARDS; i++) {
		cout << deck[i].printCard() << " ";
	}
}


