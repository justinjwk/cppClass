#ifndef PROBABILITY_H_
#define PROBABILITY_H_

#include <iostream>
#include <stdexcept>

class Probability
{
public:

	Probability(double event);
	double getProbability() const;
	void setProbability(double probIn);

	static const double NEVER = 0.0;
	const double CERTAIN = 1.0;

private:
	double probability;


};

double operator&(Probability eventA, Probability eventB);
double operator|(Probability eventA, Probability eventB);
double operator^(Probability eventA, Probability eventB);
double operator~(Probability eventA);
double operator-(Probability eventA, Probability eventB);

double operator+(Probability eventA, Probability eventB);
double operator-(Probability eventA, double eventB);

#endif /* EVENT_H_ */
