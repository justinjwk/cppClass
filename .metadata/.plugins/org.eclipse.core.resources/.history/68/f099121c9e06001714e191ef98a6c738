#include <iostream>
#include "Probability.h"

using namespace std;


Probability::Probability(double eventIn)
{
	setProbability(eventIn);
}

void Probability::setProbability(double eventIn)
{
	if(eventIn >=0 && eventIn <=1)
	{
		event = eventIn;
	}
	else
	{
		throw invalid_argument("Event ranges should be from 0.0(never) to 1.0(certain)");
	}
}

