#include <iostream>
using namespace std;

class Card {

private:
	string rank;
	string suit;

public:

	Card(string r, string s) {
		rank = r;
		suit = s;
	}

	void setRank(string r) {
		if (r.length() == 1) {
			rank = r;
		}
		else {
			rank = NULL;
		}
	}

	void setSuit(string s) {
		if (s.length() == 1) {
			suit = s;
		}
		else {
			rank = NULL;
		}
	}

	string getRank() const {
		return rank;
	}

	string getSuit() const {
		return suit;
	}

	string displayCard() {
		return rank + suit;
	}

};













int main() {

	Card c1("2","S");
	cout << c1.displayCard();


	return 0;
}
