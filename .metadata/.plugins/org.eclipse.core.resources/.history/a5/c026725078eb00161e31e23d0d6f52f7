#include <iostream>
using namespace std;

class Statistic {

public:

	void displayWelcomeMsg() const {
		cout << "==========================================================\n";
		cout << "              Welcome to Statistic Program!\n";
		cout << "This program calculates an average and standard deviation\n";
		cout << "==========================================================\n";
	}

private:

};

int main() {

	// create a Statistic object named stat
	Statistic stat;

	// call object's displayWelcomeMsg function
	stat.displayWelcomeMsg();
}
